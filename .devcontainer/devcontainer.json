{
    "name": "shaderlab",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "CONTAINER_USER": "shaderlab",
            "CONTAINER_GROUP": "shaderlab"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "lldb.executable": "/usr/bin/lldb",
                "files.watcherExclude": {
                    "**/target/**": true
                }
            },
            "extensions": [
                "vadimcn.vscode-lldb",
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "remoteUser": "shaderlab"
}
